<h1>(GeekCountry)</h1>
<h3>新規country</h3>
<%= form_for @country do |f| %>
  <div class="field">
    <%= f.label :country_name %>
    <%= f.text_field :country_name, :size => 30 %>
  </div>

  <div class="field">
    <%= f.label :city_name %>
    <%= f.select :city_name, 
    [["ソウル", "ソウル"], 
    ["ハノイ", "ハノイ"], 
    ["台北", "台北"]], include_blank: "選択して下さい" %>
  </div>

  <div class="field">
    <%= f.label :charm  %>
    <%= f.number_field :charm, :size => 10 %>
  </div>


  <div class="field">
    <%= f.label :locate  %>
    <%= f.text_area :locate, :size => "30x2" %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <%= f.submit "Countryを投稿する" %>
<% end %>

