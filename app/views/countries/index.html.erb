<h3>Country一覧</h3>

<div class="countries-container">
  <% @countries.each do |t| %>
    <div class="country">
      <p><strong>場所：</strong><%= t.locate %></p>
      <p><strong>日付：</strong><%= t.date %></p>
      <p><strong>魅力：</strong><%= t.charm %></p>
      <p><strong>投稿者：</strong><%= t.user.email %></p>
      <%= image_tag t.image_url if t.image_url.present? %>
      
      <button class="like-btn">♡ いいね</button>
      <%# --- いいね機能 --- %>
      <% if user_signed_in? %>
        <% if current_user.already_liked?(t) %>
          <%= link_to country_like_path(t), method: :delete do %>
            <i class="fas fa-heart"></i> <%= t.likes.count %>
          <% end %>
        <% else %>
          <%= link_to country_likes_path(t), method: :post do %>
            <i class="far fa-heart"></i> <%= t.likes.count %>
          <% end %>
        <% end %>
      <% else %>
        <i class="far fa-heart"></i> <%= t.likes.count %>
      <% end %>

      <div class="country">
        <div class="main-box">
          <div class="left-container">
            <%= t.body %>
          </div>
          <div class="right-container">
            <%= link_to "詳細へ", country_path(t) %><br>
            <% if user_signed_in? && current_user == t.user %>
              <%= link_to "編集する", edit_country_path(t) %><br>
              <%= link_to "削除する", country_path(t), method: :delete, data: { confirm: "本当に削除しますか？" } %>
            <% end %>
          </div>
        </div>
        <p class="time"><%= l(t.created_at, format: :short) %></p>
      </div>
    </div>
  <% end %>
</div>

<h3>投稿を検索</h3>
<%= form_tag(countries_path, method: :get) do %>
  <%= text_field_tag :search, params[:search], placeholder: "キーワードを入力" %>
  <%= submit_tag '検索する' %>
<% end %>

